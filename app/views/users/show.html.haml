%div.user-home
  = render "layouts/nav/profile"

  %section.user-travels
    %header
      = link_to 'Find A Host', new_user_visit_url(user), class: 'btn btn-primaryblue btn-block btn-lg'
      %span Coming to the march?
    - unless user.visits.empty?
      %ul
        - user.visits.each do |visit|
          %li
            = link_to edit_visit_url(visit), class: ['btn btn-default btn-block btn-lg'], role: 'button' do
              = visit.location
              .small-details
                = visit.date

  %section.user-hostings
    %header
      = link_to 'I Can Host', new_user_hosting_url(user), class: 'btn btn-lightblue btn-block btn-lg'
      %span Have room to share?
    - unless user.hostings.empty?
      %ul
        - user.hostings.each do |hosting|
          %li
            = link_to edit_hosting_url(hosting), class: ['btn btn-default btn-block btn-lg'], role: 'button' do
              = hosting.location
              .small-details
                = hosting.short_details

      .text-center.share
        = link_to '#', class: 'btn btn-share facebook-share' do
          %i.fa.fa-facebook{ :type => 'button', :aria_hidden => 'true' }
          share
        = link_to 'https://twitter.com/intent/tweet' + |
                  '?hashtags=MarchBNB' + |
                  '&text=Get involved with @womensmarch by offering campaign volunteers a place to stay!' + |
                  '&url=http://MarchBNB.com', |
                  class: 'btn btn-share twitter-share' do
          %i.fa.fa-twitter{ :type => 'button', :aria_hidden => 'true' }
          tweet
        %span Thanks for hosting!
%footer
